NODE_ENV="development"

# Application
APP_NAME="NestJS API Boilerplate"
APP_PORT="8080"
API_PREFIX="api"
APP_FALLBACK_LANGUAGE="en"
APP_HEADER_LANGUAGE="x-custom-lang"

# Database
DATABASE_TYPE="postgres"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_USERNAME="postgres"
DATABASE_PASSWORD="postgres"
DATABASE_NAME="api_boilerplate"
DATABASE_SYNCHRONIZE="false"
DATABASE_MAX_CONNECTIONS="100"
DATABASE_SSL_ENABLED="false"
DATABASE_REJECT_UNAUTHORIZED="false"
DATABASE_CA=""
DATABASE_KEY=""
DATABASE_CERT=""

# Auth
AUTH_JWT_SECRET="change-me-to-a-secure-random-string"
AUTH_JWT_TOKEN_EXPIRES_IN="1d"

# Mail
MAIL_HOST="localhost"
MAIL_PORT="1025"
MAIL_USER=""
MAIL_PASSWORD=""
MAIL_IGNORE_TLS="true"
MAIL_SECURE="false"
MAIL_REQUIRE_TLS="false"
MAIL_DEFAULT_EMAIL="noreply@example.com"
MAIL_DEFAULT_NAME="Api"
MAIL_CLIENT_PORT="1080"

# Redis (Optional - leave empty to disable caching)
REDIS_URL="redis://localhost:6379"

# AWS S3 (Optional - only needed if FILE_DRIVER=s3)
FILE_DRIVER="local"
ACCESS_KEY_ID=""
SECRET_ACCESS_KEY=""
AWS_S3_REGION=""
AWS_DEFAULT_S3_BUCKET=""

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# LinkedIn OAuth (Optional)
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""
LINKEDIN_CALLBACK_URL="http://localhost:3000/api/v1/auth/linkedin/callback"

# Twitter OAuth (Optional)
TWITTER_CONSUMER_KEY=""
TWITTER_CONSUMER_SECRET=""

# Apple OAuth (Optional)
APPLE_APP_AUDIENCE="[]"

# Worker (Optional)
WORKER_HOST="redis://localhost:6379/1"

# API Keys (Optional - Remove if not needed)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
RAPIDAPI_KEY=""
RAPIDAPI_URL=""
RAPID_REFERRAL_API=""
